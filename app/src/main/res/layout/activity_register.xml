<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.moocapp.registerActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:background="@color/colorMainBuaaBlue"
        android:id="@+id/register">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/register_Left_Return"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:background="@null"
            android:src="@drawable/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/registerView"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:maxWidth="50dp"
            android:textColor="#ffffff"
            android:textSize="25sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/regeisterEdit"
        android:layout_below="@+id/register"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/WelcomeImage"
                android:src="@drawable/register"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/Welcome"
                android:layout_toRightOf="@+id/WelcomeImage"
                android:text="Welcome!"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create your own 北航学堂 account below Required fields are noted by hold text and an asterisk(*)"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail*"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/reg_E_mailEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:hint="Example:username@domain.com"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RealName*"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/RealNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:hint="Example:Jane Doe"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName*"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/UserNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:hint="Example:Jane Doe"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/PasswordEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:hint=""/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/CheckBox1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/agree1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/CheckBox1"
                android:gravity="center"
                android:text="I agree to the "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/Service"
                android:layout_toRightOf="@+id/agree1"
                android:gravity="center"
                android:text="Terms of Service"
                android:textColor="@color/colorMainBuaaBlue"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/CheckBox2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/agree2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/CheckBox2"
                android:gravity="center"
                android:text="I agree to the "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/Code"
                android:layout_toRightOf="@+id/agree2"
                android:gravity="center"
                android:text="Honor Code"
                android:textColor="@color/colorMainBuaaBlue"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/Create"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorSkybule"
            android:text="Create"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp"/>
    </LinearLayout>

</RelativeLayout>
